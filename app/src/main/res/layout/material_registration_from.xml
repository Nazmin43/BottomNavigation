<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="50dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task3"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        style="@style/QText"
        android:textAllCaps="true"

        />
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration Form"
        android:gravity="center_horizontal"
        android:layout_margin="3dp"
        android:ems="100"
        android:textColor="@color/colorPrimary"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextLabel"
        android:hint=" Full Name"
        android:layout_margin="5dp"
        android:id="@+id/name_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextLabel"
        android:hint="Email"
        android:layout_margin="5dp"
        android:layout_below="@+id/name_layout"
        android:id="@+id/email_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/email1" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextLabel"
        android:hint="age"
        android:layout_margin="5dp"
        android:id="@+id/age_layout"
        android:layout_below="@id/email_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/age1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextLabel"
        android:hint="Enter DOB"
        android:layout_margin="5dp"
        android:id="@+id/date_layout"
        android:layout_below="@id/age_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date1"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextLabel"
        android:hint="Adress"
        android:layout_margin="5dp"
        android:id="@+id/adress_layout"
        android:layout_below="@id/date_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gender"
        android:id="@+id/gender1"
        android:layout_below="@id/adress_layout"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimary"
        android:paddingTop="10dp"/>
    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adress_layout"
        android:layout_toRightOf="@+id/gender1"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:id="@+id/female"
            android:textColor="@color/colorPrimary"/>
        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Male"
            android:textColor="@color/colorPrimary"/>

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Branch"
        android:id="@+id/branch"
        android:layout_below="@id/radioSex"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimary"/>
    <Spinner
        android:id="@+id/branch1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/branch"
        android:layout_below="@id/radioSex"
        android:layout_margin="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Language"
        android:id="@+id/lang"
        android:layout_below="@id/branch1"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimary"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hindi"
        android:id="@+id/hindi"
        android:checked="false"
        android:layout_toRightOf="@id/lang"
        android:layout_below="@id/branch"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimary"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:id="@+id/english"
        android:layout_alignBottom="@+id/hindi"
        android:layout_toEndOf="@+id/hindi"
        android:layout_toRightOf="@+id/hindi"
        android:checked="false"
        android:layout_margin="2dp"
        android:textColor="@color/colorPrimary"/>
    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Submit"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        />


</RelativeLayout>